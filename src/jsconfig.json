{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "~scripts/*": ["./resources/scripts/*"],
      "~styles/*": ["./resources/styles/*"]
    }
  },
  "exclude": ["./assets", "./node_modules"]
}
